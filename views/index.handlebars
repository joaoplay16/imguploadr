<div class="card">
  <div class="card-header">
    <h5>
      Upload an Image
    </h5>
  </div>
  <div class="card-body form-horizontal">
    <form method="post" action="/images" enctype="multipart/form-data">
      <div class="form-group col-md-12">
         <div class="form-group col-md-12 mb-2 d-flex justify-content-center ">
          <img style="max-width: 320px;" class="img-fluid mx-auto rounded border border-info" src="" alt="File Preview" id="preview">
        </div>
        <div >
          <input class="form-control" type="file" name="file" id="fileInput" onchange="previewFile()"/>
        </div>
      </div>
      <div class="form-group col-md-12 my-2">
        <div >
          <input class="form-control" type="text" name="title" placeholder="Title"/>
        </div>
      </div>
      <div class="form-group col-md-12">
        <div >
          <textarea class="form-control" name="description" rows="2" placeholder="Description"></textarea>
        </div>
      </div>
      <style>
        @keyframes moveUpDown {
          0%, 100% {
            transform: translateY(-3px);
          }
          50% {
            transform: translateY(3px);
          }
        }

        #upload-icon {
          animation: moveUpDown 2s ease-out infinite;
        }
      </style>
        <div class="col-md-12 mt-2 d-flex justify-content-end ">
          <button
            type="submit"
            id="login-btn"
            class="btn btn-success"
            type="button"
          >
            <i id="upload-icon" class="fa fa-cloud-upload" style="
                anim
            ">
            </i>
            Upload Image</button>
        </div>
    </form>
  </div>
</div>
<div class="card mt-3">
  <div class="card-header">
    <h5>
      Newest Images
    </h5>
  </div>
  <div class="card-body">
      <div class="d-flex flex-wrap gap-2">
    {{#each images}}
        <a href="/images/{{uniqueId}}">
          <img
            src="/public/upload/{{filename}}"
            alt="{{title}}"
            style="width: 175px; height: 175px;"
            class="img-thumbnail"
          />
        </a>
    {{/each}}
      </div>
  </div>
</div>