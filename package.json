  "name": "com.playlab.imgploadr",
  "version": "2.1.0",
  "description": "Social image-sharing site",
  "main": "index.js",
  "scripts": {
    "start": "tsx server",
    "clean": "rimraf build/",
    "copy-files": "copy-files-from-to",
    "build": "npm run clean && tsc && npm run copy-files && npm install build/ --omit-dev",
    "dev": "tsx watch server",
    "test": "mocha --loader=tsx -r tests/testhelper.ts -R spec tests/**/*.test.ts",
    "test:watch": "mocha --watch --loader=tsx -r tests/testhelper.ts -R spec tests/**/*.test.ts"
  },
  "copyFiles": [
    {
      "from": "package.json",
      "to": "/build/package.json"
    },
    {
      "from": "/views/**/*",
      "to": "/build/views"
    }
  ],
  "dependencies": {
    "@handlebars/allow-prototype-access": "^1.0.5",
    "body-parser": "^1.20.2",
    "com.playlab.imgploadr": "file:build",
    "cookie-parser": "^1.4.6",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.2",
    "handlebars": "^4.7.7",
    "md5": "^2.3.0",
    "method-override": "^3.0.0",
    "moment": "^2.29.4",
    "mongoose": "^7.6.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.6",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.6",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.11",
    "chai": "^4.3.10",
    "copy-files-from-to": "^3.9.0",
    "nodemon": "^2.0.21",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.5",
    "sinon": "^16.1.1",
    "sinon-chai": "^3.7.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
